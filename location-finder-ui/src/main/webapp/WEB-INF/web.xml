<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="3.0">
  <listener>
    <javaee:listener-class>
			org.springframework.web.context.ContextLoaderListener
		</javaee:listener-class>
  </listener>
  <context-param>
    <javaee:param-name>contextConfigLocation</javaee:param-name>
    <javaee:param-value>classpath:*-context.xml</javaee:param-value>
  </context-param>
  <context-param>
    <javaee:param-name>spring.profiles.default</javaee:param-name>
    <javaee:param-value>cloud</javaee:param-value>
  </context-param>
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <javaee:param-name>contextConfigLocation</javaee:param-name>
      <javaee:param-value>classpath:servlet-config.xml</javaee:param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/service/*</url-pattern>
  </servlet-mapping>
</web-app>